{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.1",
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/icones/(.*)",
      "dest": "/icones/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/api/cadastrar_video.php",
      "dest": "/api/cadastrar_video.php",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/editar_video.php",
      "dest": "/api/editar_video.php",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/vercel_blob_upload.php",
      "dest": "/api/vercel_blob_upload.php",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*\\.php)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*\\.php)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "PHP_INI_UPLOAD_MAX_FILESIZE": "100M",
    "PHP_INI_POST_MAX_SIZE": "100M",
    "PHP_INI_MEMORY_LIMIT": "512M",
    "PHP_INI_MAX_EXECUTION_TIME": "300"
  }
}
