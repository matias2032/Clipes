{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/icones/(.*)", "dest": "/icones/$1" },
    { "src": "/uploads/(.*)", "dest": "/uploads/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/api/index.php" },
    { "src": "/(.*\\.php)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "PHP_INI_UPLOAD_MAX_FILESIZE": "100M",
    "PHP_INI_POST_MAX_SIZE": "100M",
    "PHP_INI_MEMORY_LIMIT": "512M",
    "PHP_INI_MAX_EXECUTION_TIME": "300"
  }
}
